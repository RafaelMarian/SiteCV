pipeline {
    agent any

    tools {
        // This name must match a configured NodeJS installation in Jenkins Global Tool Configuration
        nodejs 'NodeJS-20' 
    }

    stages {
        stage('Install Dependencies') {
            steps {
                dir('rafael-portfolio') {
                    bat 'npm install'
                }
            }
        }
        stage('Lint') {
            steps {
                dir('rafael-portfolio') {
                    bat 'npm run lint'
                }
            }
        }
        stage('Build') {
            steps {
                dir('rafael-portfolio') {
                    bat 'npm run build'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}